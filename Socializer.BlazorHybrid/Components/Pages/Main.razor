@page "/main"

@using Socializer.Shared.Extensions

@inject LayoutState layoutState
@inject NavigationManager navigation
@inject StateContainer stateContainer

<button class="btn btn-primary w-100 mb-2" @onclick="Chat">Chat</button>
<button class="btn btn-primary w-100 mb-2" @onclick="Chats">Chats</button>
<button class="btn btn-primary w-100 mb-2" @onclick="Matches">Matches</button>
<button class="btn btn-primary w-100 mb-2" @onclick="Preferences">Preferences</button>
@* <button class="btn btn-primary w-100 mb-2" @onclick="MatchesMap">Matches map</button> *@

@code {

    protected override void OnInitialized()
    {
        layoutState.Header = $"Main";
    }

    private void Chat()
    {
        var chatHash = stateContainer.User.Id.GenerateChatHash();
        navigation.NavigateTo($"/chat/{chatHash}");
    }

    private void Chats()
    {
        navigation.NavigateTo("/chats");
    }

    private void Matches()
    {
        navigation.NavigateTo("/matches");
    }

    private void Preferences()
    {
        navigation.NavigateTo("/preferences");
    }
}